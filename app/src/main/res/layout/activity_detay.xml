<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".details.DetailsActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimaryDark"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:contentDescription="@string/movieimage"
                android:id="@+id/detayImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:transitionName="cardPicture"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:adjustViewBounds="true"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/detay_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_favorite_beyaz"
        app:fabSize="normal"
        app:backgroundTint="@color/colorPrimary"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|end"
        android:layout_marginEnd="15dp"
        android:id="@+id/detayFab"
        android:contentDescription="@string/buttonFav"
        app:elevation="8dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">
                <TextView
                    android:id="@+id/detayYil"
                    android:text="@string/detayyil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/detayYilDegisken"
                    android:layout_toEndOf="@id/detayYil"
                    android:text="@string/degisken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    />
                <ImageView
                    android:contentDescription="@string/movierating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detayStar"
                    android:layout_below="@id/detayYil"
                    android:src="@drawable/ic_star"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="10dp"
                    android:transitionName="@string/cardpicture"
                    />
                <TextView
                    android:id="@+id/detayPuan"
                    android:layout_toEndOf="@id/detayStar"
                    android:layout_below="@id/detayYil"
                    android:text="@string/degisken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="10dp"
                    android:transitionName="cardPuan"
                    />
                <TextView
                    android:id="@+id/detaySure"
                    android:layout_below="@id/detayStar"
                    android:text="@string/detay_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/detaySureDegisken"
                    android:text="@string/degisken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    android:layout_below="@id/detayStar"
                    android:layout_toEndOf="@id/detaySure"
                    />

                <TextView
                    android:id="@+id/detayYonetmenbaslik"
                    android:layout_below="@id/detaySure"
                    android:text="@string/detayYonetmenbaslik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detayyonetmenRelative"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    android:layout_below="@id/detayYonetmenbaslik">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:transitionName="picture"
                        android:scaleType="centerCrop"
                        android:layout_height="50dp"
                        android:id="@+id/detayyonetmenresim"/>
                    <TextView
                        android:transitionName="text"
                        android:layout_centerVertical="true"
                        android:id="@+id/detayyonetmen"
                        android:text="@string/degisken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/detayyonetmenresim"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/detayTurbaslik"
                    android:layout_below="@id/detayyonetmenRelative"
                    android:text="@string/detayFilmtur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"/>
                <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detaytur"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    android:layout_below="@+id/detayyonetmenRelative"
                    android:layout_toEndOf="@+id/detayTurbaslik"/>
                <view
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detay_youtube_player_view"
                    android:layout_marginTop="14dp"
                    class="com.google.android.youtube.player.YouTubePlayerView"
                    android:layout_below="@id/detaytur"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resimler"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    android:id="@+id/detayResimler"
                    android:layout_below="@id/detay_youtube_player_view"
                    />
                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/detay_viewpager"
                    android:layout_marginTop="14dp"
                    android:layout_below="@id/detayResimler"/>
                <LinearLayout
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detay_dots"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_below="@+id/detay_viewpager"/>
                <TextView
                    android:layout_below="@id/detay_dots"
                    android:id="@+id/detayOyuncularbaslik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/detayOyuncularbaslik"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detayoyuncuRelative"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    android:layout_below="@id/detayOyuncularbaslik">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detayoyuncuRelative1">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:scaleType="centerCrop"
                            android:transitionName="picture"
                            android:layout_height="50dp"
                            android:id="@+id/detayoyuncuresim1"/>
                        <TextView
                            android:transitionName="text"
                            android:layout_centerVertical="true"
                            android:id="@+id/detayoyuncu1"
                            android:text="@string/degisken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@id/detayoyuncuresim1"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detayoyuncuRelative2"
                        android:layout_below="@+id/detayoyuncuRelative1">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:scaleType="centerCrop"
                            android:transitionName="picture"
                            android:layout_height="50dp"
                            android:id="@+id/detayoyuncuresim2"/>
                        <TextView
                            android:transitionName="text"
                            android:layout_centerVertical="true"
                            android:id="@+id/detayoyuncu2"
                            android:text="@string/degisken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@id/detayoyuncuresim2"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detayoyuncuRelative3"
                        android:layout_below="@+id/detayoyuncuRelative2">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:transitionName="picture"
                            android:scaleType="centerCrop"
                            android:layout_height="50dp"
                            android:id="@+id/detayoyuncuresim3"/>
                        <TextView
                            android:transitionName="text"
                            android:layout_centerVertical="true"
                            android:id="@+id/detayoyuncu3"
                            android:text="@string/degisken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@id/detayoyuncuresim3"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detayoyuncuRelative4"
                        android:layout_below="@+id/detayoyuncuRelative3">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:transitionName="picture"
                            android:scaleType="centerCrop"
                            android:layout_height="50dp"
                            android:id="@+id/detayoyuncuresim4"/>
                        <TextView
                            android:transitionName="text"
                            android:layout_centerVertical="true"
                            android:id="@+id/detayoyuncu4"
                            android:text="@string/degisken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@id/detayoyuncuresim4"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detayoyuncuRelative5"
                        android:layout_below="@+id/detayoyuncuRelative4">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:scaleType="centerCrop"
                            android:transitionName="picture"
                            android:layout_height="50dp"
                            android:id="@+id/detayoyuncuresim5"/>
                        <TextView
                            android:transitionName="text"
                            android:layout_centerVertical="true"
                            android:id="@+id/detayoyuncu5"
                            android:text="@string/degisken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@id/detayoyuncuresim5"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detayoyuncuRelative6"
                        android:layout_below="@+id/detayoyuncuRelative5">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="50dp"
                            android:scaleType="centerCrop"
                            android:transitionName="picture"
                            android:layout_height="50dp"
                            android:id="@+id/detayoyuncuresim6"/>
                        <TextView
                            android:transitionName="text"
                            android:layout_centerVertical="true"
                            android:id="@+id/detayoyuncu6"
                            android:text="@string/degisken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginStart="15dp"
                            android:layout_toEndOf="@id/detayoyuncuresim6"
                            />
                    </RelativeLayout>
                    <com.google.android.material.button.MaterialButton
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detayoyuncuRelative6"
                        android:layout_marginTop="14dp"
                        android:text="@string/more"
                        android:id="@+id/detaydiger"/>
                </RelativeLayout>
                <TextView
                    android:layout_below="@id/detayoyuncuRelative"
                    android:id="@+id/detayOzetBaslik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/detayozetbaslik"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/detayOzet"
                    android:layout_below="@id/detayOzetBaslik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/degisken"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="15dp"
                    />
                <ImageView
                    android:contentDescription="@string/olmsuz"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/detayOzet"
                    android:src="@drawable/ic_olumsuz"
                    android:layout_marginTop="14dp"
                    android:id="@+id/detayolumsuz"
                    android:layout_marginStart="15dp"/>
                <ImageView
                    android:contentDescription="@string/cinsellik"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/detayOzet"
                    android:src="@drawable/ic_cinsellik"
                    android:id="@+id/detaycinsellik"
                    android:layout_toEndOf="@id/detayolumsuz"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"/>
                <ImageView
                    android:contentDescription="@string/siddet"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/detayOzet"
                    android:src="@drawable/ic_siddet"
                    android:id="@+id/detaysiddet"
                    android:layout_marginTop="14dp"
                    android:layout_toEndOf="@+id/detaycinsellik"
                    android:layout_marginStart="15dp"/>
                <ImageView
                    android:contentDescription="@string/aile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/detayOzet"
                    android:id="@+id/detayaile"
                    android:layout_toEndOf="@+id/detaysiddet"
                    android:src="@drawable/ic_aile"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"/>
                <ImageView
                    android:contentDescription="@string/aile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/detayOzet"
                    android:id="@+id/detay7"
                    android:layout_toEndOf="@+id/detayaile"
                    android:src="@drawable/ic_7"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"/>
                <ImageView
                    android:contentDescription="@string/aile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/detayOzet"
                    android:id="@+id/detay13"
                    android:layout_toEndOf="@+id/detay7"
                    android:src="@drawable/ic_13"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"/>
                <ImageView
                    android:contentDescription="@string/aile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/detayOzet"
                    android:id="@+id/detay15"
                    android:layout_toEndOf="@+id/detay13"
                    android:src="@drawable/ic_15"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"/>
                <ImageView
                    android:contentDescription="@string/aile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/detayOzet"
                    android:id="@+id/detay18"
                    android:layout_toEndOf="@+id/detay15"
                    android:src="@drawable/ic_18"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="15dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>